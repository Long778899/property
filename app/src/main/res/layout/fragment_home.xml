<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goketech.smartcommunity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_25">

            <ImageView
                android:id="@+id/weather"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_17"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/tianqi" />

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/weather"
                android:text="30" />

            <ImageView
                android:layout_width="@dimen/dp_119"
                android:layout_height="@dimen/dp_18"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_14"
                android:src="@mipmap/logo" />

            <RelativeLayout
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16">

                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/xiaoxi" />

                <com.goketech.smartcommunity.NumView
                    android:id="@+id/msg_num"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_5" />
            </RelativeLayout>
        </RelativeLayout>


        <com.youth.banner.Banner
            android:id="@+id/bannerHome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_138"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/ll_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_31"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_entrance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/menjinyaoshi" />

                <TextView
                    android:id="@+id/entrance"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_11"
                    android:gravity="center"
                    android:text="@string/entrance"
                    android:textSize="@dimen/dp_11" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_managment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!--<ImageView-->
                    <!--android:layout_width="@dimen/dp_23"-->
                    <!--android:layout_height="@dimen/dp_23"-->
                    <!--android:src="@mipmap/lianxiwuy" />-->

                <TextView
                    android:drawableTop="@mipmap/lianxiwuye3x"
                    android:id="@+id/managment"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_11"
                    android:gravity="center"
                    android:text="@string/property"
                    android:textSize="@dimen/dp_11" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_19"
                    android:src="@mipmap/jiaofei" />

                <TextView
                    android:id="@+id/cost"
                    android:layout_width="44dp"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_13"
                    android:gravity="center"
                    android:text="@string/cost"
                    android:textSize="@dimen/dp_11" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_warranty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:src="@mipmap/baoxiu" />

                <TextView
                    android:id="@+id/warranty"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center"
                    android:text="@string/warranty"
                    android:textSize="@dimen/dp_10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_visitor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/fangke" />

                <TextView
                    android:id="@+id/visitor"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="新增访客"
                    android:textSize="@dimen/dp_11" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_notify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_13"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tongzhi"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/tongzhi" />

            <com.sunfusheng.marqueeview.MarqueeView
                android:id="@+id/tv_notify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_14"

                app:mvAnimDuration="1000"
                app:mvDirection="bottom_to_top"
                app:mvInterval="3000"
                app:mvSingleLine="true"
                app:mvTextColor="@color/black"
                app:mvTextSize="14sp">


            </com.sunfusheng.marqueeview.MarqueeView>
        </LinearLayout>

        <include layout="@layout/layout_horizontal_line" />

        <LinearLayout
            android:id="@+id/ll_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/latest"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/latest_activity"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:nestedScrollingEnabled="false">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>